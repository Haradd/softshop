
<%= simple_form_for(@orders_product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :amount %>
    <%= f.input :price %>
    <%= f.association :order, collection: Order.order('id ASC') %>
    <%= f.association :product, collection: Product.order('name ASC') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
