 

<h1>Orders Products</h1>

<%= render 'ransack/search_form', search: @search %>

<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search, :amount, "Amount") %></th>
      <th><%= sort_link(@search, :price, "Price") %></th>
      <th><%= sort_link(@search, :order, "Order") %></th>
      <th><%= sort_link(@search, :product, "Product") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders_products.each do |orders_product| %>
      <tr>
        <td><%= orders_product.amount %></td>
        <td><%= orders_product.price %></td>
        <td><%= orders_product.order %></td>
        <td><%= orders_product.product %></td>
        <td><%= link_to 'Show', orders_product %></td>
        <td><%= link_to 'Edit', edit_orders_product_path(orders_product) %></td>
        <td><%= link_to 'Destroy', orders_product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Orders Product', new_orders_product_path %>
