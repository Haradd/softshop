

<h1>Products</h1>

<%= render 'ransack/search_form', search: @search_products, search_key: :q_product %>

<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search_products, :id, "id") %></th>
      <th><%= sort_link(@search_products, :name, "Name") %></th>
      <th><%= sort_link(@search_products, :description, "Description") %></th>
      <th><%= sort_link(@search_products, :price, "Price") %></th>
      <th><%= sort_link(@search_products, :product_type, "Product type") %></th>
      <th><%= sort_link(@search_products, :publisher, "Publisher") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.product_type %></td>
        <td><%= product.publisher %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product ), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @products, param_name: :products_page %>


<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-info' %>
