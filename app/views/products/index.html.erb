<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= render 'ransack/search_form', search: @search %>

<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search, :name, "Name") %></th>
      <th><%= sort_link(@search, :description, "Description") %></th>
      <th><%= sort_link(@search, :price, "Price") %></th>
      <th><%= sort_link(@search, :product_type, "Product type") %></th>
      <th><%= sort_link(@search, :publisher, "Publisher") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.product_type %></td>
        <td><%= product.publisher %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
