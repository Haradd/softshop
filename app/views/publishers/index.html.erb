 

<h1>Publishers</h1>

<%= render 'ransack/search_form', search: @search_publishers, search_key: :q_publisher %>

<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search_publishers, :name, "Name") %></th>
      <th><%= sort_link(@search_publishers, :description, "Description") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr>
        <td><%= publisher.name %></td>
        <td><%= publisher.description %></td>
        <td><%= link_to 'Show', publisher %></td>
        <td><%= link_to 'Edit', edit_publisher_path(publisher ), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', publisher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @publishers, param_name: :publishers_page %>

<br>

<%= link_to 'New Publisher', new_publisher_path, class: 'btn btn-info' %>
