

<h1>Newsletters</h1>

<%= render 'ransack/search_form', search: @search_newsletters, search_key: :q_newsletter %>

<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search_newsletters, :id, "id") %></th>
      <th><%= sort_link(@search_newsletters, :title, "Title") %></th>
      <th><%= sort_link(@search_newsletters, :product_type, "Product Type") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newsletters.each do |newsletter| %>
      <tr>
        <td><%= newsletter.id %></td>
        <td><%= newsletter.title %></td>
        <td><%= newsletter.product_type.name %></td>
        <td><%= link_to 'Show', newsletter %></td>
        <td><%= link_to 'Edit', edit_newsletter_path(newsletter ), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', newsletter, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @newsletters, param_name: :newsletters_page %>

<br>

<%= link_to 'New Newsletter', new_newsletter_path, class: 'btn btn-info' %>
