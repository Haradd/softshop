<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<%= render 'ransack/search_form', search: @search %>



<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search, :created_at, "Date") %></th>
      <th><%= sort_link(@search, :payment_date, "Payment date") %></th>
      <th><%= sort_link(@search, :price, "Price") %></th>
      <th><%= sort_link(@search, :status, "Status") %></th>
      <th><%= sort_link(@search, :customer, "Customer") %></th>
      <th><%= sort_link(@search, :card, "Card") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.payment_date %></td>
        <td><%= order.price %></td>
        <td><%= order.status %></td>
        <td><%= order.customer %></td>
        <td><%= order.card %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
