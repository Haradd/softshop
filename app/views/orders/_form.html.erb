
<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :payment_date, as: :datetime%>
    <%= f.input :price %>
    <%= f.input :status %>
    <%= f.association :customer, collection: Customer.order('email ASC') %>
    <%= f.association :card, collection: Card.order('number ASC') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
