 

<h1>Mails</h1>

<%= render 'ransack/search_form', search: @search_mails, search_key: :q_mail %>

<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search_mails, :text, "Text") %></th>
      <th><%= sort_link(@search_mails, :newsletter, "Newsletter") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mails.each do |mail| %>
      <tr>
        <td><%= mail.text %></td>
        <td><%= mail.newsletter %></td>
        <td><%= link_to 'Show', mail %></td>
        <td><%= link_to 'Edit', edit_mail_path(mail ), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', mail, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @mails, param_name: :mails_page %>

<br>

<%= link_to 'New Mail', new_mail_path, class: 'btn btn-info' %>
