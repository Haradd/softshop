<p id="notice"><%= notice %></p>

<h1>Mails</h1>

<%= render 'ransack/search_form', search: @search %>

<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search, :name, "Name") %></th>
      <th><%= sort_link(@search, :description, "Description") %></th>
      <th><%= sort_link(@search, :price, "Price") %></th>
      <th><%= sort_link(@search, :product_type, "Product type") %></th>
      <th><%= sort_link(@search, :publisher, "Publisher") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search, :text, "Text") %></th>
      <th><%= sort_link(@search, :newsletter, "Newsletter") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mails.each do |mail| %>
      <tr>
        <td><%= mail.text %></td>
        <td><%= mail.newsletter %></td>
        <td><%= link_to 'Show', mail %></td>
        <td><%= link_to 'Edit', edit_mail_path(mail) %></td>
        <td><%= link_to 'Destroy', mail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mail', new_mail_path %>
