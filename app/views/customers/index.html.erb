 

<h1>Customers</h1>

<%= render 'ransack/search_form', search: @search_customers, search_key: :q_customer %>

<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search_customers, :first_name, "First Name") %></th>
      <th><%= sort_link(@search_customers, :last_name, "Last Name") %></th>
      <th><%= sort_link(@search_customers, :email, "email") %></th>
      <th><%= sort_link(@search_customers, :phone_number, "Phone Number") %></th>
      <th>Expenses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.expenses %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @customers, param_name: :customers_page %>

<br>

<%= link_to 'New Customer', new_customer_path %>
