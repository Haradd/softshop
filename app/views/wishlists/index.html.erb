 

<h1>Wishlists</h1>

<%= render partial: 'ransack/search_form', locals: {search: @search_wishlists, search_key: :q_wishlist} %>


<table class="table table-striped" >
  <thead>
    <tr>
      <th><%= sort_link(@search_wishlists, :name, "Name") %></th>
      <th><%= sort_link(@search_wishlists, :customer, "Customer") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishlists.each do |wishlist| %>
      <tr>
        <td><%= wishlist.name %></td>
        <td><%= wishlist.customer %></td>
        <td><%= link_to 'Show', wishlist %></td>
        <td><%= link_to 'Edit', edit_wishlist_path(wishlist) %></td>
        <td><%= link_to 'Destroy', wishlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @wishlists, param_name: :wishlists_page %>

<br>

<%= link_to 'New Wishlist', new_wishlist_path %>
